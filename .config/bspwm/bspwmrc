#! /bin/sh

sxhkd &

bspc config border_width       3
bspc config window_gap         0

bspc config split_ratio         0.61803
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config focus_by_distance   true
bspc config focus_follows_pointer true
bspc config pointer_follows_focus false
bspc config bottom_padding 31
bspc config right_padding 7
bspc config left_padding 7
bspc config top_padding 7

bspc monitor '^1' -d     
#bspc monitor '^2' -d  

bspc rule -a Termite state=floating
bspc rule -a Steam desktop=^5
bspc rule -a Pidgin desktop=^2 state=pseudo_tiled
bspc rule -a thunar state=floating
bspc rule -a Thunar state=floating
bspc rule -a Gimp state=floating
bspc rule -a \*:transparent_blank border=false
bspc rule -a Mumble state=floating
bspc rule -a franz desktop=^2 state=pseudo_tiled

bspc config focused_border_color '#586e75'
bspc config normal_border_color '#fdf6e3'
bspc config presel_feedback_color '#fdf6e3'
bspc config urgent_border_color '#d33682'

compton --config ~/.config/compton/compton.conf -b &
xset +fp /usr/share/fonts/local &
xset fp rehash &
xsetroot -cursor_name left_ptr &
xset r rate 200 30 &
xrdb -merge ~/.Xresources &
nitrogen --restore &
nvidia-settings -a '[gpu:0]/GPUPowerMizerMode=1' &
python /home/toqoz/code/python/yarn/yarn.py &
panel &

#LD_PRELOAD="libpthread.so.0 libGL.so.1" __GL_THREADED_OPTIMIZATIONS=1
